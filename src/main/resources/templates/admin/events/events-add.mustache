{{>layout/header}}

    <link href="/css/admin/plugins/datapicker/datepicker3.css" rel="stylesheet">
    <link href="/css/admin/plugins/clockpicker/clockpicker.css" rel="stylesheet">

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">

        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5 style="font-size: 25px;">Events Add</h5>
                </div>
                <div class="ibox-content">
                    <form method="post" class="form-horizontal">
                        <input type="hidden" id="id">
                        <div class="form-group"><label class="col-sm-1 control-label">Title</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="title">
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>

                        <div class="form-group"><label class="col-sm-1 control-label">Type</label>
                            <div class="col-sm-10">
                                <label style="margin: 5px 15px 0 0; font-size: 15px;">
                                    <input type="radio" value="live" id="type" checked="checked"> Live
                                </label>
                                <label style="margin: 5px 15px 0 0; font-size: 15px;">
                                    <input type="radio" value="archive" id="type"> Archive
                                </label>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>

                        <div class="form-group"><label class="col-sm-1 control-label">Date</label>
                            <div class="col-sm-10" style="float: left;">
                                <div class="input-daterange input-group col-sm-4" id="datepicker">
                                    <input type="text" class="input-sm form-control" id="start_date" value="">
                                    <span class="input-group-addon">to</span>
                                    <input type="text" class="input-sm form-control" id="end_date" value="">
                                </div>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>

                        <div class="form-group"><label class="col-sm-1 control-label">Date</label>
                            <div class="col-sm-10" style="float: left;">
                                <div class="input-group clockpicker col-sm-2" data-autoclose="true" style="float: left;">
                                    <input type="text" class="form-control" id="start_time" value="09:30">
                                    <span class="input-group-addon">
                                        <span class="fa fa-clock-o"></span>
                                    </span>
                                </div>

                                <div class="input-group clockpicker col-sm-2" data-autoclose="true" style="float: left;">
                                    <input type="text" class="form-control" id="end_time" value="09:30">
                                    <span class="input-group-addon">
                                        <span class="fa fa-clock-o"></span>
                                    </span>
                                </div>

                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>

                        <div class="form-group"><label class="col-sm-1 control-label">Content</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" id="content"></textarea>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>

                        <div class="form-group">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button id="btn-cancle" class="btn btn-white" >Cancel</button>
                                <button id="btn-save" class="btn btn-primary">Save changes</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>


</div>

<script>
    $(function(){
        $("#datepicker").datepicker({
            format: "yyyy-mm-dd"
        });

        $(".clockpicker").clockpicker();


    });

</script>
<script src="/js/admin/events-add.js"></script>
<script src="/js/admin/plugins/datapicker/bootstrap-datepicker.js"></script>
<script src="/js/admin/plugins/clockpicker/clockpicker.js"></script>
{{>layout/footer}}
